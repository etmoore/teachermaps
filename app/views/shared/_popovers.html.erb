<script type="text/javascript">
var tour = new Tour({ labels: { end: "Dismiss" } });

<% if @progress[:next_task] == :confirm_email %>
  tour.addSteps([{
    element: "#fat-menu",
    title: "Confirm your email address",
    content: "If you didn't get our confirmation email, you can re-send it from the settings page.",
    placement: "bottom",
  }]);

  $("#fat-menu").click(function() {
    tour.end();
  });

<% elsif @progress[:next_task] == :cloud_storage %>
  tour.addSteps([{
    element: "#fat-menu",
    title: "Add a storage service",
    content: "Go to the settings page to connect TeacherMaps to your Dropbox or Google Drive account.",
    placement: "bottom",
  }]);

  $("#fat-menu").click(function() {
    tour.end();
  });

<% elsif @progress[:next_task] == :create_map %>
  tour.addSteps([{
    element: "#users_create_map",
    title: "Get started!",
    content: "Click here to create your first map",
    placement: "bottom",
  }]);

  $("#users_create_map").click(function() {
    tour.end();
  });

<% end %>

tour.start();
</script>
