<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t('global.app_name'), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t('home.link'),     root_path %></li>
          <li><%= link_to t('help.link'),     help_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('signin.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('signin.profile'), current_user %></li>
                <li><%= link_to t('signin.settings'), settings_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('signin.signout'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('signin.link'), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
<script type="text/javascript">
    $(document).ready(function () {
        $('.dropdown-toggle').dropdown();
    });
</script>