
<%= form_tag standards_ajax_filter_path, id: 'filter_standards_form', :class=>"form-inline", :remote=>true do %>

  <%= select_tag("stanard_types", options_for_select(@filter_standard_types.map {|x| [x.name, x.id]}), { :id=>'filter_standard_types', :style=>'width:200px;'}) %>
  <%= select_tag("course_grades", options_for_select(@filter_course_grades.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_grades', :style=>'width:100px;'}) %>
  <%= select_tag("course_subjects", options_for_select(@filter_course_subjects.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_subjects', :style=>'width:200px;'}) %>
 
  <br/>
  <%= text_field_tag 'filter_standards_search', '', :maxlength => 15, :placeholder=>t('shared.search'), :name=>'q', :class => 'search-query', :style=>'width:500px;' %>

<% end %>


<script type="text/javascript">

$("#filter_standard_types").select2({
  placeholder: 'All Types'
});
$("#filter_course_grades").select2({
  placeholder: '<%= I18n.t("resources.all_grades") %>'
});
$("#filter_course_subjects").select2({
    placeholder: '<%= I18n.t("resources.all_subjects") %>'
});


</script>