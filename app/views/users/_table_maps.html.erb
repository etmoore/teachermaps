<ul style="list-style-type:none;">
    
  <% @maps.each do |map| %>
    <li action-url="<%= user_map_path map.user,map.slug  %>"  style="cursor:pointer;" class="action-link hover">
      
      <div class="row editable">
        <span>
          <%= link_to map, :confirm => "Delete \"#{map.name.titlecase}\"?",  :method => :delete, :class=>"users_map_destroy pull-right", remote: true do %>
            <i class="icon-trash"></i>
          <% end %>
        </span>

        <div class="span11" id="resource_filter">
          <h4><%= truncate(map.name, :length => Map::MAX_NAME_RENDER_LEN) %></h4>
          <span>
            <%= truncate(map.text, :length => Map::MAX_TEXT_RENDER_LEN) %>
          </span>
        </div>
      </div>
      
      <div class="row">
      
        <div class="span4">
          <ul class="inline">
            <li>
              <label>Standards: <%= map.standards_count %> </label>
            </li>
            <li>
              <label>Objectives: <%= map.objectives_count %></label>
            </li>
            <li>
              <label>Resources: <%= map.resources_count %></label>
            </li>
          </ul>
        </div>

        <div class="span4 pull-right">
          <ul class="inline">
            <li>
              <% if map.course_subjects.any? %>
                <label>Subjects: <%= map.course_subjects.map(&:name).join(", ") %></label>
              <% end %>    
            </li>
            <li>
              <% if map.course_grades.any? %>
                <label>Grades: <%= map.course_grades.map(&:name).join(", ") %></label>
              <% end %>
            </li>
          </ul>
        </div>

      </div>
    </li>
  <% end %>

</ul>

