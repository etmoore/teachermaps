<h1 class="center"><%= t 'signin.title' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name, t('signin.name_label') %>
      <%= f.text_field :name %>

      <%= f.label :password, t('signin.password_label') %>
      <%= f.password_field :password %>

      <%= f.submit t('signin.link'), class: "btn btn-large btn-primary" %>
    <% end %>
    <p><%= raw t('signin.new_user', signup: link_to(t('signup.link'), signup_path,)) %></p>
  </div>
</div>
