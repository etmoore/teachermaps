<h1 class="center"><%= t 'signin.title' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <% if @key %>
        <%= hidden_field_tag :email_request_key, @key %>
      <% end %>

      <%= f.label :name, t('signin.name_label') %>
      <%= f.text_field :name %>

      <%= f.label :password, t('signin.password_label') %>
      <%= f.password_field :password %>

      <%= f.submit t('signin.link'), class: "btn btn-large btn-primary" %>
    <% end %>
    <p>
      <%= link_to(t('signup.link'), signup_path) %>
      |
      <%= link_to(t('reset_password.link'), controller: 'users', action: 'reset_password') %>
    </p>
  </div>
</div>
