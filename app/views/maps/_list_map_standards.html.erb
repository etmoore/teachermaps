<% if !@map.map_standards.empty? %>
	<% @map.sorted_map_standards.each do |map_standard| %>
   	<ul style="list-style-type:none;">

			<li action-url="<%= user_map_standard_path map_standard.user, map_standard.slug %>" class="hover clickable action-link editable">    
				
        <span>
          <%= link_to map_standard_path(map_standard), :confirm => "Delete \"#{map_standard.standard.name}\"?",  :method => :delete, :class=>"maps_map_standard_destroy pull-right", remote: true do %>
            <i class="icon-trash"></i>
          <% end %>
        </span>
       		
     		<b><%= map_standard.standard.name %>: </b>
     		<p><%= raw(map_standard.standard.text) %></p>

		    <ul class="inline">
			  	<li>
		  	  <label>Objectives: <%= map_standard.map_objectives.count %></label>
	        </li>
	        <li>
	        	<!-- I know, do not look the resource counter.... -->
	        	<label>Resources: <%= map_standard.map_objectives.map{|a| a.map_resources.count}.sum %></label>
	        </li>
        </ul>

			</li>

		</ul>
	<% end %>
<% end %>
