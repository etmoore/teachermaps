<div style="margin-left:25px">
<%= form_tag standards_ajax_filter_path, id: 'filter_standards_form', :class=>"form-inline", :remote=>true do %>

  <%= hidden_field_tag "map_id", @map.id %>
  <%= select_tag("standard_type", options_for_select(@filter_standard_types.map {|x| [x.name, x.id]}), { :id=>'filter_standard_types', :style=>'min-width:160px;'}) %>
  <%= select_tag("course_grades", options_for_select(@filter_course_grades.map {|x| [x.name, x.id]}), { :multiple=>true, :id=>'filter_course_grades', :style=>'min-width:160px;'}) %>
  <%= select_tag("course_subject", options_for_select(@filter_course_subjects.map {|x| [x.name, x.id]}), { :id=>'filter_course_subjects', :style=>'min-width:160px;'}) %>
 
  <br/>
  <%= text_field_tag 'filter_standards_search', '', :maxlength => 15, :placeholder=>t('shared.search'), :name=>'q', :class => 'search-query', :style=>'width:500px;' %>

<% end %>


<script type="text/javascript">
$(document).ready(function() { 
  $("#filter_standard_types").select2({
  });
  $("#filter_course_grades").select2({
    placeholder: '<%= I18n.t("resources.all_grades") %>'
  });
  $("#filter_course_subjects").val(7).select2({
      placeholder: '<%= I18n.t("resources.all_subjects") %>'
  });
});
</script>
</div>