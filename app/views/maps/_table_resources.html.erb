<table class="table table-condensed table-hover"  id="map_resources_table"  style="cursor:pointer;">
  <tbody>
  <thead>
    <tr>
      <th><%= t('shared.type') %></th>
      <th><%= t('resources.title') %></th>
      <th><%= t('resources.grades') %></th>
      <th><%= t('resources.subjects') %></th>
    </tr>
  </thead>

  <% @resources.each do |resource| %>
    <tr resource-url="<%= resources_ajax_show_path resource.slug %>"> 
      <td title="<%= resource.get_type %>" style="width:35px;"><%= raw resource.get_thumbnail %></td>
      <td><%= link_to truncate(resource.title, :length => Resource::MAX_TITLE_RENDER_LEN), resource_url(resource), :target => "_blank" %></td>
      <td>
        <% if resource.course_grades.any? %>
          <%= resource.course_grades.map(&:name).join(", ") %>
        <% end %>     
      </td>
      <td>
        <% if resource.course_subjects.any? %>
          <%= resource.course_subjects.map(&:name).join(", ") %>
        <% end %>    
      </td>
    </tr>
  <% end %>
</tbody>
</table>

