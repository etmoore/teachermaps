<div class="row">
  <div class="span10" style="">
    <div>
      <div>
        <!-- Breadcrumb -->
        <%= link_to "#{@map.name.titlecase}", "#" %> /
      </div>
      <div>
        <h2><%= @map.name.titlecase %></h2>
      </div>
      <!-- Map Content -->
      </div>
        <p><%= @map.text %></p>
      <div>
      <div>
        <div>
          <div class="pull-right"><%= link_to 'Add Standards', "#filter_map_standards_modal",'data-toggle' => "modal",  :class => 'btn'  %></div>
          <h3>Standards</h3>
        </div>
        <div>
          <!-- Map Standards -->
          <% if !@map.map_standards.empty? %>
            <% @map.sorted_map_standards.each do |map_standard| %>
              <div>
                <span>
                  <span><b><%= map_standard.standard.name %></b><span>: <%= map_standard.standard.text %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div>
        <div>
          <h3>Assessments</h3>
        </div>
        <div>
          <!-- Map Assessments -->
          <% if !@map.map_assessments.empty? %>
            <% @map.map_assessments.each do |map_asssessment| %>
              <div style="padding:5px;">
                <div>
                  <span><b><%= map_asssessment.name %></b><span>: <%= map_asssessment.text %>
                </div>
                <% if !map_asssessment.map_resources.empty? %>
                  <% map_asssessment.map_resources.each do |map_resource| %>
                    <div style="padding-left:50px;">
                      <div>
                        <span title="<%= map_resource.resource.get_type %>" style="width:35px;"><%= raw map_resource.resource.get_thumbnail %></span>
                        <span><b><%= link_to map_resource.resource.title.titlecase, resource_path(map_resource.resource.slug),  :target => "_blank" %></b><span>: <%= map_resource.text %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div id="filter_map_standards_modal" class="modal hide fade in">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <div><H3>Standards Filter</H3></div>
        <div class="row">
          <div class="span12" id="standards_filter">
          <%= render 'standards/form_filter' %>
          </div>
        </div>
        <div class="row">
          <div class="span6" id="standards_table">
            <%= render 'standards/list' %>
          </div>
        </div>
    </div>
  </div>
</div>