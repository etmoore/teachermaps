<div class="row">
  <input type="hidden" id="map-id" value=<%= @map.id %> />
  
  <div class="span10" style="">
    <div>
      <div>
        <!-- Breadcrumb -->
        <%= link_to "My Maps", user_path(@map.user) %> / <%= link_to "#{@map.name.titlecase.truncate(40)}", "JavaScript:void(0);" %> /
      </div>
      <div>
        <h2><%= best_in_place @map, :name, :type => :input, :display_as => :title_titlecase %></h2>
      </div>
      <!-- Map Content -->
      </div>
        <p ><%= best_in_place @map, :text, :type => :textarea %></p>
      <div>

      <div class="editable-btn">
        <span class="pull-right">
          <%= link_to 'Edit Standards', "#filter_map_standards_modal",'data-toggle' => "modal",  :class => 'btn'  %>
        </span> 
        <h3>Standards</h3>
        <div id="map_standards_list">

          <!-- Map Standards -->
          <%= render 'maps/list_map_standards' %>

        </div>
      </div>


      <div class="editable-btn">
        <span class="pull-right">
            <%= link_to 'Add Assessment', "JavaScript:void(0);", :class => 'btn', id: 'create_map_assessment', 'action-url' => map_assessments_path %>
        </span>  
        <h3>Assessments</h3>
        <div id="maps_list_map_assessments">
          <!-- Map Assessments -->
          <%= render 'maps/list_map_assessments' %>
        </div>
      </div>
    </div>
  </div>


  <div id="filter_map_standards_modal" class="modal hide fade in">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <div><H3>Standards Filter</H3></div>
        <div class="row">
          <div class="span7" id="standards_filter">
          <%= render 'standards/filter_standards' %>
          </div>
        </div>
        <div class="row">
          <div class="span6" id="standards_table">
            <%= render 'standards/list_standards' %>
          </div>
        </div>
    </div>
  </div>

  <div id="filter_map_resources_modal" class="resource-modal modal hide fade" >
    <div class="filter_map_resources_modal_header modal-header">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <h3>Loading...</h3>
    </div>
    <div class="filter_map_resources_modal_body modal-body center">
        <%= image_tag "loading.gif", :alt => "loading"%>
    </div>
    <div class="modal-footer">&nbsp;</div>
  </div>

</div>