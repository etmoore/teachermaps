<div class="row">
  <input type="hidden" id="map-id" value=<%= @map.id %> />
  <input type="hidden" id="user-id" value=<%= @current_user.id %> />

  <div class="span10" style="">
    <div>
      <div>
        <!-- Breadcrumb -->
        <%= link_to "#{@map.name.titlecase}", map_path(@map) %> /
      </div>
      <div>
        <h2><%= best_in_place @map, :name, :type => :input, :display_as => :title_titlecase %></h2>
      </div>
      <!-- Map Content -->
      </div>
        <p><%= best_in_place @map, :text, :type => :textarea %></p>
      <div>
      <div>
        <div>
          <div class="pull-right">
            <%= link_to 'Add Standards', "javascript:(void)",'data-toggle' => "modal",  :class => 'btn'  %>
            <%= link_to 'Edit Standards', "#filter_map_standards_modal",'data-toggle' => "modal",  :class => 'btn'  %>
          </div> 
          <h3>Standards</h3>
        </div>
        <div id="map_standards_list">

          <!-- Map Standards -->
          <%= render 'maps/map_standards_list' %>

        </div>
      </div>
      <div>
        <div class="pull-right">
            <%= link_to 'Add Assessment', "JavaScript:void(0);", :class => 'btn', id: "create_map_assessment", 'action-url' => map_assessments_path %>
        </div>  
        <div>
          <h3>Assessments</h3>
        </div>
        
        <div id="maps_list_map_assessments">
          <!-- Map Assessments -->
          <%= render 'maps/list_map_assessments' %>
        </div>
      </div>
    </div>
  </div>


  <div id="edit_map_modal" class="edit-map-modal modal hide fade in">
    <input type="hidden" id="map-id" map-id=<%= @map.id %> />
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <div><H3><%= @map.name.titlecase %></H3></div>
      <div class="row">
        <div class="span10" id="resource_filter">
        <%= render 'maps/edit' %>
        </div>
      </div>
      <div class="row">
        <div class="span10" id="resource_table">
          <%= render 'maps/table_resources' %>
        </div>
      </div>
    </div>
  </div>

  <div id="filter_map_standards_modal" class="modal hide fade in">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <div><H3>Standards Filter</H3></div>
        <div class="row">
          <div class="span7" id="standards_filter">
          <%= render 'standards/form_filter' %>
          </div>
        </div>
        <div class="row">
          <div class="span6" id="standards_table">
            <%= render 'standards/list' %>
          </div>
        </div>
    </div>
  </div>


  <div id="filter_map_resources_modal" class="resource-modal modal hide fade in">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" style="margin-right:10px;">&times;</button>
      <div><H3>Resource Filter</H3></div>
      <div class="row">
        <div class="span9" id="map_resource_filter">
        <%= render 'maps/filter_resource' %>
        </div>
      </div>
      <div class="row">
        <div class="span9" id="map_resource_table">
          <%= render 'maps/table_resources' %>
        </div>
      </div>
    </div>
  </div>
</div>