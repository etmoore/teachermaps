<% if !@map.map_standards.empty? %>
	<% @map.map_standards.each do |map_standard| %>
   	<ul style="list-style-type:none;">

			<li action-url="<%= user_map_standard_path map_standard.user, map_standard %>" class="hover clickable">    
	       		
     		<b><%= map_standard.standard.name %>: </b>
     		<p><%= raw(map_standard.standard.text) %></p>

		    <ul class="inline">
			  	<li>
			  	  <label>Objectives: <%= map_standard.objectives_count %></label>
		        </li>
		        <li>
		        	<label>Resources: <%= map_standard.resources_count %></label>
		        </li>
	        </ul>

			</li>

		</ul>
  	<% end %>
<% end %>
