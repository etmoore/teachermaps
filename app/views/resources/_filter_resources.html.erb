<%= form_tag resources_filter_path, id: 'filter_resource_form', :class=>"form-inline", :remote=>true do %>
  
  <%= select_tag("resource_types", options_for_select(@filter_course_types.map {|x| [x.name, x.id]}), :multiple=>true, :id=>'filter_resource_types') %>
  <%= select_tag("course_grades", options_for_select(@filter_course_grades.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_grades'}) %>
  
  <%= select_tag("course_subjects", options_for_select(@filter_course_subjects.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_subjects'}) %>
  <br/>
  <%= text_field_tag 'filter_resource_search', '', :maxlength => 15, :placeholder=>t('shared.search'), :style=>'width:91%;margin-top:5px;', :name=>'q', :class => 'search-query' %>

<% end %>

<script type="text/javascript">
$(document).ready(function() { 
  
  $("#filter_resource_types").select2({
    width : '30%',
    placeholder: '<%= t("resources.all_types") %>'
  });
  $("#filter_course_grades").select2({
    width : '30%',
    placeholder: '<%= t("resources.all_grades") %>'
  });
  $("#filter_course_subjects").select2({
      width : '30%',
      placeholder: '<%= t("resources.all_subjects") %>'
  });

}); 
</script>