<%= form_tag resources_filter_path, id: 'filter_resource_form', :class=>"form-inline", :remote=>true do %>
  

<div class="row">
  <%= select_tag("resource_types", options_for_select(ResourceType.all.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_resource_types', class: 'span4'}) %>
  <%= select_tag("course_grades", options_for_select(CourseGrade.all.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_grades', class: 'span4'}) %>
  <%= select_tag("course_subjects", options_for_select(CourseSubject.all.map {|x| [x.name, x.id]}), {:multiple=>true, :id=>'filter_course_subjects', class: 'span4'}) %>
</div>
<div>
<%= text_field_tag 'filter_resource_search', '', :maxlength => 15, :placeholder=>t('shared.search'), :style=>'margin-top:5px;', :name=>'q' %>
</div>

<% end %>

<script type="text/javascript">
$(document).ready(function() { 
  
  $("#filter_resource_types").select2({
    placeholder: '<%= t("resources.all_types") %>'
  });
  $("#filter_course_grades").select2({
    placeholder: '<%= t("resources.all_grades") %>'
  });
  $("#filter_course_subjects").select2({
    placeholder: '<%= t("resources.all_subjects") %>'
  });

}); 
</script>