<% if @resource.errors.any? %>
  <div id="error_explanation" class="alert alert-error">
    <h4>
      <%= t('shared.errors', count: pluralize(@resource.errors.count, t('shared.error_noun'))) %>
    </h4>
    <ul>
    <% @resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>