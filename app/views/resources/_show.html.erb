<form class="form">
  <h1><%= @resource.title %></h1>  

  
  <div class="control-group">
    <label >Grades</label>
    <div class="controls">
      <% if @resource.course_grades.any? %>
        <% @resource.course_grades.each do |x| %>
          <%= x.name %>
        <% end %>
      <% else %>   
        <label>None</label>
      <% end %>    
    </div>
  </div>
  


  <div class="control-group">
    <label>Subjects</label>
    <div class="controls">
      <% if @resource.course_subjects.any? %>
        <% @resource.course_subjects.each do |x| %>
          <%= x.name %>
        <% end %>
      <% else %>   
        <label>None</label>
      <% end %>    
    </div>
  </div>


  <div class="control-group">
    <div class="controls">
      <% if @resource.type == LinkResource::TYPE %>
        <%= link_to 'Open Link', @resource.link, :class => 'btn', :target => "_blank"  %>
      <% else %>
        <%= link_to 'Open File', @resource.open_link, :class => 'btn', :target => "_blank"  %>
      <% end %>
      
      <%= link_to t('resources.delete_label'), resource_path(@resource) , :confirm => t('resources.delete_file_confirmation', :title=>@resource.title), :method => :delete, :class=>'btn' %>
      <%= link_to 'Edit', "#", :class=>"btn btn-primary start", :id=>'editResourceLinkView', 'resource-id'=>@resource.id  %>
    </div>
  </div>

</form>