<%= form_tag resources_ajax_filter_path, id: 'filter_resource_form', :class=>"form-inline", :remote=>true do %>
  

  <%= select_tag("resource_types", options_for_select([ [ I18n.t('resources.web'), LinkResource::TYPE],  [ I18n.t('google_drive.link'), GoogleResource::TYPE],  [ I18n.t('drop_box.link'), DropBoxResource::TYPE] ]), :multiple=>true, :id=>'filter_resource_types') %>

  <%= select_tag("course_grades", options_from_collection_for_select(CourseGrade.all, "id", "name"), {:multiple=>true, :id=>'filter_course_grades'}) %>

  <%= select_tag("course_subjects", options_from_collection_for_select(CourseSubject.all, "id", "name"), {:multiple=>true, :id=>'filter_course_subjects'}) %>

  <input name="q" type="text" class="search-query" placeholder="<%= t('shared.search') %>" style="width:250px" id="filter_edit_search">

<% end %>

<script type="text/javascript">
$(document).ready(function() { 
  
  $("#filter_resource_types").select2({
    width : '200px',
    placeholder: '<%= t("resources.all_types") %>'
  });
  $("#filter_course_grades").select2({
    width : '200px',
    placeholder: '<%= t("resources.all_grades") %>'
  });
  $("#filter_course_subjects").select2({
      width : '250px',
      placeholder: '<%= t("resources.all_subjects") %>'
  });
}); 
</script>