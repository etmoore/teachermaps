<%= form_tag resources_ajax_filter_path, id: 'filter_resource_form', :class=>"form-inline", :remote=>true do %>
  

  <%= select_tag("resource_types", options_from_collection_for_select(ResourceType.all, "id", "name"), :multiple=>true, :id=>'filter_resource_types') %>

  <%= select_tag("course_grades", options_for_select(@filter_course_grades.sort.map {|k,v| [v,k]}), {:multiple=>true, :id=>'filter_course_grades'}) %>

  <%= select_tag("course_subjects", options_from_collection_for_select(CourseSubject.all, "id", "name"), {:multiple=>true, :id=>'filter_course_subjects'}) %>

  <%= text_field_tag 'filter_edit_search', '', :maxlength => 15, :placeholder=>t('shared.search'), :style=>'width:250px;', :name=>'q', :class => 'search-query' %>

<% end %>

<script type="text/javascript">
$(document).ready(function() { 
  
  $("#filter_resource_types").select2({
    width : '200px',
    placeholder: '<%= t("resources.all_types") %>'
  });
  $("#filter_course_grades").select2({
    width : '200px',
    placeholder: '<%= t("resources.all_grades") %>'
  });
  $("#filter_course_subjects").select2({
      width : '250px',
      placeholder: '<%= t("resources.all_subjects") %>'
  });
}); 
</script>