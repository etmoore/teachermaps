function closeModalOnSubmit(){

	window.setTimeout(function() { 
        // Hide all modals
        if( $('.close').length > 0 ){
            // With animation
            $('.close').click();
            console.log("Closing via click");
        } else {
            // Without animation
            $('.modal.in').modal('hide');   
            // $('.modal.in').modal.close();
            console.log("Closing manually");
        }
    }, 300);

    window.setTimeout(function() { 
    	$('.modal-backdrop').fadeOut('fast');    
        $('.modal-backdrop').remove();
    }, 400);
    console.log('Closing Modal');

}