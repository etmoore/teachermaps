jQuery(function($) {

  $("#update_setting_form")

    .bind("ajax:error", function(event, data, status, xhr) {
        // Flash user of the error
        pushFlash("<%= I18n.t('settings.save_error') %>", 'error');  
    })
    .bind("ajax:success", function(event, data, status, xhr) {
        // Flash user of the success
        pushFlash("<%= I18n.t('settings.save_success') %>", 'success');
    });
    
});